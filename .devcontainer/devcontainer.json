{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "ubuntu",
  "image": "osrf/ros:rolling-desktop-full",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "version": "latest",
      "username": "ubuntu",
      "userUid": "1000",
      "userGid": "1000"
    }
  },
  "workspaceFolder": "/home/ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/src,type=bind",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "eamodio.gitlens",
        "ms-iot.vscode-ros"
      ]
    }
  },
  "containerEnv": {
    "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
    "ROS_DOMAIN_ID": "42",
    "CAR_NAME": "dr_drift"
  },
  "runArgs": [
    "--net=host",
    "-e",
    "DISPLAY=${env:DISPLAY}"
  ],
  "mounts": [
    {
      "source": "/tmp/.X11-unix",
      "target": "/tmp/.X11-unix",
      "type": "bind"
    },
    {
      "source": "/dev/dri",
      "target": "/dev/dri",
      "type": "bind"
    }
  ],
  "postCreateCommand": {
    "chown-ws": "sudo chown -R ubuntu /home/ws/",
    "rosdep": "sudo apt update && sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y",
    "source_from_bashrc": "echo 'source /opt/ros/rolling/setup.bash' >> ~/.bashrc"
  }
}
